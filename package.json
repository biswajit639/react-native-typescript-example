{
  "name": "inbox-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "tsc": "./node_modules/.bin/tsc -w",
    "tsc:ci": "./node_modules/.bin/tsc",
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "test": "jest --env=jsdom --watchAll",
    "test:ci": "jest --env=jsdom --coverage",
    "docs": "typedoc --options typedoc.json --out docs src/"
  },
  "dependencies": {
    "react": "16.0.0-beta.3",
    "react-dom": "16.0.0-beta.3",
    "react-native": "0.47.1",
    "react-native-vector-icons": "^4.3.0",
    "react-redux": "^5.0.5",
    "redux": "^3.7.2",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "@types/enzyme": "^2.8.4",
    "@types/jest": "^20.0.6",
    "@types/react": "^16.0.0",
    "@types/react-native": "^0.47.0",
    "@types/react-native-vector-icons": "^4.2.1",
    "@types/react-redux": "^4.4.47",
    "@types/react-test-renderer": "^15.5.2",
    "@types/redux-logger": "^3.0.0",
    "@types/redux-mock-store": "0.0.9",
    "@types/redux-thunk": "^2.1.0",
    "@types/sinon": "^2.3.3",
    "babel-jest": "20.0.3",
    "babel-preset-react-native": "2.1.0",
    "enzyme": "^2.9.1",
    "jest": "20.0.4",
    "react-addons-test-utils": "^15.6.0",
    "react-test-renderer": "16.0.0-beta.3",
    "redux-mock-store": "^1.2.3",
    "sinon": "^3.1.0",
    "ts-jest": "^20.0.10",
    "typescript": "^2.4.2"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/",
      "<rootDir>/lib/"
    ],
    "cacheDirectory": ".jest/cache"
  }
}
